
<div class="row">
  <div calss="col-xs-12 offset-md-3">
    <h2 class="head-line title_h2 offset-md-2">
      <%= @full_name %>さんの会員情報編集
    </h2>

  <%= form_with(model:@member, url: {controller: 'admin/members', action: 'update' }, local: true ,method: :patch) do |f| %>

    <div class="col-xs-10">
      <div class="form-group col-xs-9">
        <%= f.label :"会員ID", class: "col-sm-4 control-label" %>
        <%= f.label :"#{@member.id}" %>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :"氏名", class: "col-sm-4 control-label" %>
        <%= f.text_field :last_name, class: "col-sm-3 form-control-static name" %>
        <%= f.text_field :first_name, class: "col-sm-3 form-control-static name" %>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :"フリガナ", class: "col-sm-4 control-label" %>
        <%= f.text_field :last_name_kana, class: "col-sm-3 form-control-static name" %>
        <%= f.text_field :first_name_kana, class: "col-sm-3 form-control-static name" %>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :"郵便番号", class: "col-sm-4 control-label" %>
        <%= f.text_field :postal_code, class: "col-sm-3 form-control-static name" %>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :"住所", class: "col-sm-4 control-label" %>
        <%= f.text_field :address, class: "col-sm-3 form-control-static name" %>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :"電話番号", class: "col-sm-4 control-label" %>
        <%= f.text_field :phone_number, class: "col-sm-3 form-control-static name" %>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :"メールアドレス", class: "col-sm-4 control-label" %>
        <%= f.text_field :email, class: "col-sm-3 form-control-static name" %>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :"会員ステータス", class: "col-sm-4 control-label" %>
          <%= f.radio_button :member_status, false %>
        　<%= f.label :member_status, "有効", {value: :false, style: "display: inline-block;"} %>
        　<%= f.radio_button :member_status, true %>
        　<%= f.label :member_status, "退会", {value: :true, style: "display: inline-block;"} %>
      </div>
    </div>

      <div class="col-xs-9 col-xs-offset-4">
        <%= f.submit '変更を保存する' , class: "btn btn-success" %>
      </div>
  <% end %>
  </div>
</div>