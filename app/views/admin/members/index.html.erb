<div class="container">
  <div class="row justify-content-center">
    <h2>会員一覧</h2>

    <table class="table table-hover table-inverse'">
      <thead class="thead-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
        <tr>
          <td><%= member.id %></td>
          <td>
            <%= link_to admin_member_path(member) do %>
              <%= member.full_name %>
            <% end %>
          </td>
          <td><%= member.email %></td>
          <td>
            <% if member.member_status == false %>
              <p class="text-succsess">有効</p>
            <% else %>
              <p class="text-muted">退会</p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>