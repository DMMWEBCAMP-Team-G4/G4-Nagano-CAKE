<div class="container">
  <h2>商品新規登録</h2>
  <div class="row">
  <div class="mx-auto col-8">

    <%= form_with model: @product,url:admin_products_path,method: :post,local: true do |f| %>

    <div class="form-group">
      <%= f.label :"商品画像" , class:"col-3" %>
      <%= f.attachment_field :image %>
    </div>
    <div class="form-group">
      <%= f.label :"商品名" , class:"col-3" %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :"商品説明" , class:"col-3" %>
      <%= f.text_area :description %>
    </div>
    <div class="form-group">
      <%= f.label :"ジャンル" , class:"col-3" %>
      <%= f.collection_select :genre_id, @genres, :id, :name, prompt: "-- 選択してください --" %>
    </div>
    <div class="form-group">
      <%= f.label :"税抜価格" , class:"col-3" %>
      <%= f.text_field :price %>円
    </div>
    <div class="form-group">
      <%= f.label :"販売ステータス" , class:"col-3" %>
      <%= f.radio_button :is_active,true %>
      <%= f.label :is_active, "販売中", value: true %>
      <%= f.radio_button :is_active,false %>
      <%= f.label :is_active, "販売停止中", value: false %>
    </div>
    <div class="col-8 text-center">
      <%= f.submit "新規登録" , class:"btn btn-success" %>
    </div>
    <% end %>
  </div>
  </div>
</div>
