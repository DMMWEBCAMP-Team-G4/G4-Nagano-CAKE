  <div class=container>
    <div class='row'>
      <div class='col'>
        <h3>ジャンル一覧・追加</h3>
      </div><br>
    </div>

    <div class='row'>
        <%= form_with model: @genre, url: {controller: 'genres', action: 'create' }, local:true do |f| %>
          <div class='col'>
          ジャンル名
          <%= f.text_field :name, size: "20" %>
          <%= f.submit "新規登録", class: 'btn btn-success' %>
          </div>
        <% end %><br><br>
    </div>

      
      <div class='col col-md-4'>
        <table class='table'>
          <thead>
            <tr class="bg-success">
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
              </tr>
              <tr> </tr>
            <% end %>
         </tbody>
       </table>
      </div>
  </div>