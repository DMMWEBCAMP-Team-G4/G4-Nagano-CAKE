
<div class ='container'>
  <div class='row'>
    <div class='col col-md-8 offset-md-2'>
      <h3>ジャンル一覧・追加</h3>
      <%= form_with model: @genre, url: {controller: 'genres', action: 'create' }, local:true do |f| %>
        <div class="form-group">
          ジャンル名
          <%= f.text_area :name, rows:'1', cols:'1', class: 'form-control genre_name' %>
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
        <div class='col col-md-8 offset-md-2'>
          <table class='table'>
            <thead>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  <p><%= genre.name %></p>
                  <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
                  <td>
                  <p>コメント数：<%= book.post_comments.count %></p>
                  </td>
                </tr>
              <% end %>
           </tbody>
         </table>
        <h5>ジャンル名</h5>
        </div>
    </div>
  </div>
</div>