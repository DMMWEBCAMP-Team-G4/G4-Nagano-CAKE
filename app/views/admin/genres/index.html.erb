
<div class ='container'>
  <div class='row'>
    <div class='col col-md-8 offset-md-2'>
      <h3>ジャンル一覧・追加</h3>
      <%= form_with model: @genre, url: {controller: 'genres', action: 'create' }, local:true do |f| %>
        <div class="form-group">
          <p>ジャンル名</p>
          <%= f.text_area :name, rows:'1', cols:'1', class: 'form-control genre_name' %>
          <%= f.submit "追加", class: 'btn btn-success' %>
        </div>
      <% end %>
        <div class='col col-md-8 offset-md-2'>
          <table class='table'>
            <thead> <h5>ジャンル名</h5></thead>
            <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  <td><%= genre.name %></td>
                  <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
                </tr>
              <% end %>
           </tbody>
         </table>
        </div>
    </div>
  </div>
</div>