<h2 class="head-line title_h2 text-center">注文履歴詳細</h2>
  <div class="row">
    <div class="col-xs-12">
      <% all_price = 0 %>
      <div class="col-xs-9">
        <div class="field">
          <div class="col-xs-4">
            購入者
          </div>
          <div class="col-xs-8">
            <%= @order.member.last_name %><%= @order.member.first_name %>
          </div>
        </div>
        
        <div class ="field">
          <div class="col-xs-4">
            注文日
          </div>
          <div class="col-xs-8">
            <%= @order.created_at %>
          </div>
        </div>
        
        <div class="field">
          <div class="col-xs-4">
            配送先
          </div>
          <div class="col-xs-8">
            <%= @order.shiiping_postal_code %><%= @order.shipping_address %></br>
            <%= @order.receiver %>
          </div>
        </div>
        
        <div class="field">
          <div class="col-xs-4">
            支払い方法
          </div>
          <div class="col-xs-8">
            <%= @order.method_of_payment %>
          </div>
        </div>
        
        <%= form_with model:@order, url:admin_order_path, method: :patch, local: true do |f| %>
          <div class="col-xs-4">
            注文ステータス
          </div>
          <div class="col-xs-6">
            <%= f.select :order_status, Order.order_status.keys, class: "order_status" %>
          </div>
          <div class="col-xs-2">
            <%= f.submit "更新", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
      
      <div class="col-xs-9">
        <table class="table table-hover table-bordered table-inverse">
          <thead>
            <tr class="info">
              <th class="col-xs-4">商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th>制作ステータス</th>
            </tr>
          </thead>
          
          <tbody>
          <% @order_products.each do |order_product| %>
            <tr>
              <td class="text-left">
                <%= order_product.product.name %>
              </td>
              <td class="text-right">
                <%= order_product.product.price %>
              </td>
              <td class="text-right">
                <%= order_product.number %>
              </td>
              <td class="text-right">
                <% sum_items = order.product.price * order.product.number %>
                <%= sum_items.to_s(:delimited) %>
                <% all_price += sum_items %>
              </td>
              <%= form_with model:@order_product, url:admin_order_path(order_product), method: :patch, local: true do |f| %>
              <td>
                <%= f.select :making_status, OrderProduct.making_status.keys, class: "order-status" %>
                <%= f.submit "更新", class: "btn btn-warning" %>
              </td>
              <% end %>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-xs-3">
        <table class="table table-hover table-bordered table-condensed">
          <tr>
            <th class="info">
              合計金額
            </th>
            <td>
              <%= all_price.to_s(:delimited) %>
            </td>
          </tr>
          <tr>
            <th class="info">
              送料
            </th>
            <td>
              800
            </td>
          </tr>
          <tr class ="info">
            <th>
              請求金額合計
            </th>
            <td>
              <%= (all_price + 800).to_s(:delimited) %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>