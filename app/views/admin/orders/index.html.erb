<div class="container">
  <h2>注文履歴一覧</h2>
    <div class="row">

    <table class="table table-hover">

      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_product_path(product.id) do %>
            <%= order.created_at %>
            <% end %>
          </td>
          <td>
            <%= full_name(order.member) %>
          </td>
          <td>
            <%= order.order_products.count %>
          </td>
          <td>
            <%= order.status %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-12 text-center"><%= paginate @orders %></div>
    <!--ページング機能-->

    </div>
</div>
