<div class="container">
  <h2>管理者ログイン</h2>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">


    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>

      <div class="form-group row">
        <%= f.label :"メールアドレス" , class:"col-4" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"col-8" %>
      </div>

      <div class="form-group row">
        <%= f.label :"パスワード" , class:"col-4" %>
        <%= f.password_field :password, autocomplete: "current-password" , class:"col-8" %>
      </div>

      <div class="col-12 text-center">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>


    </div>
  </div>
</div>
