<h2 class="head-line title_h2 text-center">注文情報確認</h2>
<div class="row">
  <div class="col-xs-9">
    <% if current_member.cart_items.present? %>
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info">
            <th>商品</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td class="text-left">
                <%= attachment_image_tag(cart_item.product, :image, fallback: "no_image.jpg") %>
                <%= cart_item.product.name %>
              </td>
              <td class="text-right">
                <%= tax_price(cart_item.product.price).to_s(:delimited) %>
              </td>
              <td class="text-right">
                <%= cart_item.number %>
              </td>
              <td class="text-right">
                <%= cart_item.product.price.to_s(:delimited) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="col-xs-3 billing">
        <table class="table table-hover table-condensed table-bordered">
          <tr>
            <th class="info">送料</th>
            <td class="text-right col-xs-5">800</td>
          </tr>
          <tr>
            <th class="info">商品合計</th>
            <td class="text-right">商品合計</td>
          </tr>
          <tr>
            <th class="info">請求金額</th>
            <td class="text-right">請求金額</td>
          </tr>
        </table>
      </div>
      <div class="col-xs-9 biling">
        <table class="table table-hover table-condensed table-bordered">
          <tr>
            <th class="info">支払方法</th>
            <td class="text-left">
              <%= @order.method_of_payment %>
            </td>
          </tr>
          <tr>
            <th class="info">お届け先</th>
            <td class="text-left">
              <%= "#{@order.postal_code} #{@order.address} 　#{@order.name}" %>
            </td>
          </tr>
        </table>
        <div class="col-xs-11">
          <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
            <%= f.hidden_field :shipping_postal_code %>
        </div>
      </div>
  </div>
</div>
