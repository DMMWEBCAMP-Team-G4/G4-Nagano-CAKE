<h3>配送先編集</h3>
<%= form_with model: @address, local: true do |f| %>
<div>
  <div>
    <%= f.label :郵便番号, class: '' %>
    <%= f.text_field :shipping_postal_code, class: 'form-control-static shipping_postal_code' %>
  </div>

  <div>
    <%= f.label :住所, class: '' %>
    <%= f.text_field :shipping_address, class: 'form-control-static shipping_address'%>
  </div>

  <div>
    <%= f.label :宛名, class: '' %>
    <%= f.text_field :receiver, class: 'form-control-static receiver' %>
  </div>

  <div>
    <%= f.submit "変更内容を保存", class: 'btn btn-success' %>
  </div>
<% end %>
</div>

