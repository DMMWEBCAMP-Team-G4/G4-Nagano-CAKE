<h2>新規会員登録</h2>

  <%= form_with model: @member, url: member_registration_path, id: 'new_member', class: 'new_member', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前, class: 'col-3' %><span>(姓)<%= f.text_field :first_name, autofocus: true, class: 'mx-5' %></span>
  </div>

  <div class="field">
    <%= f.label :フリガナ, class: 'col-3' %><span><%= f.text_field :first_name_kana, autofocus: true, class: 'mx-5' %></span>
  </div>

  <div class="field">
    <%= f.label :メールアドレス, class: 'col-3' %><span><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mx-5' %></span>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし）, class: 'col-3' %><span><%= f.text_field :postal_code, autofocus: true, class: 'mx-5' %></span>
  </div>

  <div class="field">
    <%= f.label :住所, class: 'col-3' %><span><%= f.text_field :address, autofocus: true, class: 'col-6 mx-5' %></span>
  </div>

  <div class="field">
    <%= f.label :電話番号, class: 'col-3' %><span><%= f.text_field :phone_number, autofocus: true, class: 'mx-5' %></span>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><span><%= f.password_field :password, autocomplete: "new-password", class: 'mx-5' %></span>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用）, class: 'col-3' %><span><%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mx-5' %></span>

  </div>

  <div class="actions col">
    <%= f.submit "新規登録", class: "col-3 btn btn-success" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<p><%= link_to 'こちら', new_member_session_path %>　からログインしてください</p>
