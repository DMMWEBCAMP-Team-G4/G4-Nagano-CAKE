<div class="container">
    <div class="row">
      <div class="col col-sm-2 offset-md-2">
        <h4 class="bg-light">マイページ</h4>
        <br>
      </div>
    </div>
    
      <div class="row">
        <div class="col col-sm-2">
          <h3>登録情報</h3>
        </div>
        <div class="col col-sm-2 align-self-center">
          <%=link_to "編集する", edit_member_path(@member), class: "btn btn-success" %>
        </div><br>
      </div>
      
      <div class="row">
          
          <table class="table table-bordered">
            <tbody>
                <tr>
                  <td class="col col-sm-3">
                      氏名
                  </td>
                  <td class="col col-sm-3">
                      <%=@member.first_name %>
                  </td>
                </tr>
                
                <tr>
                  <td class="col col-sm-3">
                      カナ
                  </td>
                  <td class="col col-sm-3">
                      <%=@member.first_name_kana %>
                  </td>
                </tr>
                  
                <tr>
                  <td class="col col-sm-3">
                      郵便番号
                  </td>
                  <td class="col col-sm-3">
                      <%=@member.postal_code %>
                  </td>
                </tr>
                
                <tr>
                  <td class="col col-sm-3">
                      住所
                  </td>
                  <td class="col col-sm-3">
                      <%=@member.address %>
                  </td>
                </tr>
                
                <tr>
                  <td class="col col-sm-3">
                      電話番号
                  </td>
                  <td class="col col-sm-3">
                      <%=@member.phone_number %>
                  </td>
                </tr>
                
                <tr>
                  <td class="col col-sm-3">
                      メールアドレス
                  </td>
                  <td class="col col-sm-3">
                      <%=@member.email %>
                  </td>
                </tr>
             </tbody>
          </table>
      </div><br>
      
      <div class="row">
          <div class="col col-sm-2">
            <h3>配送先</h3>
          </div>
          
          <div class="col col-sm-2 align-self-center">
            <%= link_to "一覧を見る", shipping_addresses_path(@member), class:"btn btn-primary" %>
          </div>
      </div>
      
      <div class="row">
          <div class="col col-sm-2">
            <h3>注文履歴</h3>
          </div>
          
          <div class="col col-sm-2 align-self-center">
            <%= link_to "一覧を見る", orders_path(@member), class:"btn btn-primary" %>
          </div>
      </div>
      
</div>